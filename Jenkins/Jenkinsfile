				      """
	}
	stages {

		stage('build project gradle') {
			steps {
				sh 'echo "Message: --${GIT_MESSAGE}--"'
				container('gradle') {
					dir('.') {
						sh """
	                        gradle -v
	                        gradle clean build -i
                        """
					}
				}
			}
		}

